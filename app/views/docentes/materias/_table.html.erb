<%= link_to new_docente_materia_path(@docente,@materia), class: "btn btn-info btn-sm mb-3" do %>
  Nueva Materia
  <%= fa_icon "plus" %>
<% end %>

<table class="table">
  <tr>
    <th>Nombre</th>
    <th>Acciones</th>
  </tr>
  <% @materias.each do |materia| %>
  <tr>
    <td><%= materia.nombre %></td>
    <td>
      <%= link_to docente_materia_path(@docente, materia), class: "btn btn-success btn-sm" do %>
        <%= fa_icon "eye" %>
        Mostrar
      <% end %>

      <%= link_to edit_docente_materia_path(@docente, materia), class: "btn btn-warning btn-sm" do %>
        <%= fa_icon "pencil" %>
        Editar
      <% end %>

      <%= link_to docente_materia_path(@docente, materia), class: "btn btn-danger btn-sm" , method: :delete, data: {confirm: "Ojo!!"} do %>
        <%= fa_icon "trash" %>
        Eliminar
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
