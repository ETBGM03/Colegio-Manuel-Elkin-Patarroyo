<h3>Anotaciones del Alumno(a) <%= @usuario.nombre %>  <%= @usuario.apellido %></h3>
<%= link_to new_usuario_anotacion_path(@usuario,@anotacion), class: "btn btn-info btn-sm mb-3" do %>
  Nueva Anotacion
  <%= fa_icon "plus" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-lg">
      <div class="card-body">
        <div class="box">
          <table class="table">
            <tr>
              <th>Fecha</th>
               <th>Anotacion</th>
               <th>Acciones</th>
            </tr>


            <tr>
              <td>
                <%= link_to anotacion.fecha, usuario_anotacion_path(@usuario, anotacion) %>
              </td>
              <td>
                <%= anotacion.titulo%>
              </td>
              <td>

                <%= link_to  edit_usuario_anotacion_path(@usuario, anotacion), class: "btn btn-warning btn-sm" do %>
                  <%= fa_icon('pencil') %>
                  Editar
                <% end %>

                <%= link_to usuario_anotacion_path(@usuario, anotacion), class: "btn btn-danger btn-sm" , method: :delete, data: {confirm: "Ojo!!"} do %>
                  <%= fa_icon "trash" %>
                  Eliminar
                <% end %>


              </td>
            </tr>



          </table>

        </div>
      </div>
    </div>
  </div>
</div>
