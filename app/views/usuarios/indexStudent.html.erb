<%= link_to new_usuario_path, class: "btn btn-info btn-sm mb-3" do %>
  Registrar Estudiante
  <%= fa_icon "plus" %>
<% end %>


<table class="table table-respnsive">
    <tr>
      <thead class="thead-dark">
        <th>Email</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Direccion</th>
        <th>Telefono</th>
        <th>Email</th>
        <th>Acciones</th>
      
      </thead>
    </tr>
  <% @usuarios.each do |usuario|  %>
     <% if usuario.has_role? :estudiante %>
      <tr>
        <td> <%= usuario.email %> </td>
        <td> <%= usuario.nombre %> </td>
        <td> <%= usuario.apellido %> </td>
         <td> <%= usuario.direccion %> </td>
          <td> <%= usuario.telefono %> </td>
           <td> <%= usuario.email %> </td>
        <td>
        <%= link_to usuario_path(usuario), class:"btn btn-success btn-sm" do %>
          <%= fa_icon "eye" %>
          Mostrar
        <% end %>

        <%= link_to edit_usuario_path(usuario), class: "btn btn-warning btn-sm" do %>
          <%= fa_icon('pencil') %>
          Editar
        <% end %>

        <%= link_to usuario_path(usuario),method: :delete,class: "btn btn-danger btn-sm", data: {confirm:"Â¿Desae eliminar este estudiante?"} do %>
          <%= fa_icon "trash" %>
          Eliminar
        <% end %>
      </td>
      </tr>
     <% end %>
  <% end %>
</table>